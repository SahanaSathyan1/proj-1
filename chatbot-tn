   <script src="https://sdk.amazonaws.com/js/aws-sdk-2.7.16.min.js"></script>
<script>
  AWS.config.region = 'us-east-1'; // Change to your Lex bot's region
  AWS.config.credentials = new AWS.CognitoIdentityCredentials({
    IdentityPoolId: 'us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx' // Replace with your Cognito Identity Pool ID
  });

  var lexruntime = new AWS.LexRuntimeV2();
  var lexUserId = 'user-' + Date.now();
  var sessionAttributes = {};

  function sendMessage() {
    var inputText = document.getElementById('userInput').value;
    document.getElementById('chatbox').innerHTML += "<p>User: " + inputText + "</p>";

    var params = {
      botId: 'YOUR_BOT_ID', // Replace with your Lex bot ID
      botAliasId: 'YOUR_ALIAS_ID', // Replace with your bot alias ID
      localeId: 'en_US',
      sessionId: lexUserId,
      text: inputText
    };

    lexruntime.recognizeText(params, function(err, data) {
      if (err) {
        console.log(err, err.stack);
      } else {
        document.getElementById('chatbox').innerHTML += "<p>Bot: " + data.messages[0].content + "</p>";
      }
    });

    document.getElementById('userInput').value = '';
  }
</script>

<div id="chat-container">
  <div id="chatbox"></div>
  <input type="text" id="userInput" placeholder="Type a message..." />
  <button onclick="sendMessage()">Send</button>
</div>
</html>
